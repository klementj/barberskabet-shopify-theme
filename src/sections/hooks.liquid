    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Billede"
    },
    {
      "type": "richtext",
      "id": "text_3",
      "label": "Tekst",
      "default": "<p>Skriv en kort tekst der forklarer jeres hook</p>"
    }
  ],
"presets": [
    {
      "name": "Hooks",
      "category": "Collection"
    }
  ]
}
{% endschema %}