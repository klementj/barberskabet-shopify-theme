<section class="container py-5">
  <!-- Heading -->
  {% if section.settings.heading != blank %}
    <h2 class="text-center mb-4">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="row">
    <!-- Hook 1 -->
    <article class="col-md mb-3">

      <!-- Hook Heading -->
      {% if section.settings.heading_1 != blank %}
      <h3 class="text-center mb-3">{{ section.settings.heading_1 }}</h3>
      {% endif %}

      <!-- Hook Image -->
      <div>
        {% if section.settings.image_1 != blank %}
        {% include 'responsive-image' with
            image: section.settings.image_1,
        max_width: 545,
        max_height: 545
        %}
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>
      <!-- Hook text -->
      <p>{{ section.settings.text_1 }}</p>

    </article>

    
    <!-- Hook 2 -->
    <article class="col-md mb-3">

      <!-- Hook Heading -->
      {% if section.settings.heading_2 != blank %}
      <h3 class="text-center mb-3">{{ section.settings.heading_2 }}</h3>
      {% endif %}

      <!-- Hook Image -->
      <div>
        {% if section.settings.image_2 != blank %}
        {% include 'responsive-image' with
            image: section.settings.image_2,
        max_width: 545,
        max_height: 545
        %}
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>

      <!-- Hook text -->
      <p>{{ section.settings.text_2 }}</p>

    </article>
    
    <!-- Hook 3 -->
    <article class="col-md mb-3">

      <!-- Hook Heading -->
      {% if section.settings.heading_3 != blank %}
      <h3 class="text-center mb-3">{{ section.settings.heading_3 }}</h3>
      {% endif %}

      <!-- Hook Image -->
      <div>
        {% if section.settings.image_3 != blank %}
        {% include 'responsive-image' with
            image: section.settings.image_3,
        max_width: 545,
        max_height: 545
        %}
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>
      <!-- Hook text -->
      <p>{{ section.settings.text_3 }}</p>

    </article>
  </div><!-- end row -->
</section>

{% schema %}
{
  "name": "Hooks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Hvorfor vælge Barberskabet?",
      "placeholder": "Tekst til overskrift"
    },
    

    {
      "type": "text",
      "id": "heading_1",
      "label": "Hook overskrift",
      "default": "Kvalitet",
      "placeholder": "Tilføj en hook overskrift"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Billede"
    },
    {
