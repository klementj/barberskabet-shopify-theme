      },
      {
        "type": "text",
        "id": "button_label_1",
        "label": "Første knap tekst"
      },
      {
        "type": "url",
        "id": "button_link_1",
        "label": "Første knap link"
      },
      {
        "type": "text",
        "id": "button_label_2",
        "label": "Anden knap tekst"
      },
      {
        "type": "url",
        "id": "button_link_2",
        "label": "Anden knap link"
      },
      {
        "type": "text",
        "id": "button_label_3",
        "label": "Tredje knap tekst"
      },
      {
        "type": "url",
        "id": "button_link_3",
        "label": "Tredje knap link"
      },
      {
        "type": "link_list",
        "id": "menu1",
        "label": "Venstre Menu",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "menu2",
        "label": "Højre Menu",
        "default": "main-menu"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner",
        "category": "Call to Action"
      }
    ]
  }
