<div class="row frontpage-section-4" id="trial">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-12">
        <h2>
          {{ section.settings.header }}
        </h2>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 col-sm-8 offset-sm-2 offset-lg-0 mb-3">
        <div class="plan-box">
          <div class="mask-box">
            <span class="no-shavers">{{ section.settings.box1-amount}}</span>
            {{ 'antal-skraber.png' | asset_url | img_tag: 'Skraber',  'shaver' }}
            <div class="corner-ribbon top-left groomee shadow">{{ section.settings.box1-ribbon}}</div>
          </div>
          <div class="description">{{ section.settings.box1-description }}</div>
          <div class="price">{{ section.settings.box1-price }}</div>
          <a href="#" class="btn btn-primary buy-button"
            onclick="addItemToCart({{ section.settings.variant_id1 }}, {{ section.settings.quantity1 }}, {{ section.settings.shipping_interval_frequency1 }}, {{ section.settings.shipping_interval_unit_type1 }}, {{ section.settings.subscription_id1 }}, {{ section.settings.recurring_price1 }}, {{ section.settings.charge_delay1 }})">{{ section.settings.box1-button }}</a>
        </div>
      </div>
      <div class="col-lg-4 col-sm-8 offset-sm-2 offset-lg-0 mb-3">
        <div class="plan-box">
          <div class="mask-box">
            <span class="no-shavers">{{ section.settings.box2-amount}}</span>
            {{ 'antal-skraber.png' | asset_url | img_tag: 'Skraber',  'shaver' }}
            <div class="corner-ribbon top-left groomee shadow">{{ section.settings.box2-ribbon}}</div>
          </div>
          <div class="description">{{ section.settings.box2-description }}</div>
          <div class="price">{{ section.settings.box2-price }}</div>
          <a href="#" class="btn btn-primary buy-button"
            onclick="addItemToCart({{ section.settings.variant_id2 }}, {{ section.settings.quantity2 }}, {{ section.settings.shipping_interval_frequency2 }}, {{ section.settings.shipping_interval_unit_type2 }}, {{ section.settings.subscription_id2 }}, {{ section.settings.recurring_price2 }}, {{ section.settings.charge_delay2 }})">{{ section.settings.box2-button }}</a>
        </div>
      </div>
      <div class="col-lg-4 col-sm-8 offset-sm-2 offset-lg-0 mb-3">
        <div class="plan-box">
          <div class="mask-box">
            <span class="no-shavers">{{ section.settings.box3-amount}}</span>
            {{ 'antal-skraber.png' | asset_url | img_tag: 'Skraber',  'shaver' }}
            <div class="corner-ribbon top-left groomee shadow">{{ section.settings.box3-ribbon}}</div>
          </div>
          <div class="description">{{ section.settings.box3-description }}</div>
          <div class="price">{{ section.settings.box3-price }}</div>
          <a href="#" class="btn btn-primary buy-button"
            onclick="addItemToCart({{ section.settings.variant_id3 }}, {{ section.settings.quantity3 }}, {{ section.settings.shipping_interval_frequency3 }}, {{ section.settings.shipping_interval_unit_type3 }}, {{ section.settings.subscription_id3 }}, {{ section.settings.recurring_price3 }}, {{ section.settings.charge_delay3 }})">{{ section.settings.box3-button }}</a>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Medlemskabspriser",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Sektion overskrift"
    }
  ],
  "blocks": [
    {
      "type": "Produkt",
      "name": "Produkt",
      "settings": [
        {
          "type": "text",
          "id": "ribbon",
          "label": "Bånd",
          "default": "Hver 2. måned"
        },
        {
          "type": "text",
          "id": "amount",
          "label": "Antal blade",
          "default": "8 X"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Billede",
          "info": "150 x 100px"
        }
        {
          "type": "text",
          "id": "description",
          "label": "Beskrivelse",
          "default": "Jeg barberer mig ca. pr. uge"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Pris",
          "default": "10,00 kr."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Knap tekst"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Knap link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Medlemskabspriser",
      "category": "Barbering"
    }
  ]
}
{% endschema %}