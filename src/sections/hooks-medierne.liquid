<div style="background-color: {{ section.settings.bg-color }}; color: {{ section.settings.text-color }}; fill: {{ section.settings.icon-color }}; stroke: {{ section.settings.icon-color }}">
<section class="container py-3 py-md-4">
  <!-- Heading -->
  {% if section.settings.heading != blank %}
    <h2 class="text-center mb-2">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="row">
    <!-- Hook 1 -->
    <article class="col-md-4" >

      <!-- Hook Image -->
      <div class="px-4">
        {% if section.settings.image_1 != blank %}
          {% include 'responsive-image' with
              image: section.settings.image_1,
          max_width: 545,
          max_height: 545
          %}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>
      
      <!-- Hook Heading -->
      {% if section.settings.heading_1 != blank %}
      <h3 class="text-center">{{ section.settings.heading_1 }}</h3>
      {% endif %}

      <!-- Hook Text -->
      {% if section.settings.text_1 != blank %}
        <div class="text-center">{{ section.settings.text_1 }}</div>
      {% endif %}

    </article>
    
    
    <!-- Hook 2 -->
    <article class="col-md-4" >
      
      <!-- Hook Image -->
      <div class="px-4">
        {% if section.settings.image_2 != blank %}
        {% include 'responsive-image' with
            image: section.settings.image_2,
        max_width: 545,
        max_height: 545
        %}
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>
      
      <!-- Hook Heading -->
      {% if section.settings.heading_2 != blank %}
      <h3 class="text-center">{{ section.settings.heading_2 }}</h3>
      {% endif %}
      
      <!-- Hook Text -->
      {% if section.settings.text_2 != blank %}
        <div class="text-center">{{ section.settings.text_2 }}</div>
      {% endif %}

    </article>
    
    <!-- Hook 3 -->
    <article class="col-md-4" >
      
      <!-- Hook Image -->
      <div class="px-4">
        {% if section.settings.image_3 != blank %}
        {% include 'responsive-image' with
            image: section.settings.image_3,
        max_width: 545,
        max_height: 545
        %}
        {% else %}
        {{ 'image' | placeholder_svg_tag: 'img-thumbnail' }}
        {% endif %}
      </div>
      
      <!-- Hook Heading -->
      {% if section.settings.heading_3 != blank %}
      <h3 class="text-center">{{ section.settings.heading_3 }}</h3>
      {% endif %}

      <!-- Hook Text -->
      {% if section.settings.text_3 != blank %}
        <div class="text-center">{{ section.settings.text_3 }}</div>
      {% endif %}

    </article>
  </div><!-- end row -->
</section>
</div>

{% schema %}
{
  "name": "Set os i medierne",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Set os i medierne?",
      "placeholder": "Set os i medierne?"
    },
    {
      "type": "color",
      "id": "bg-color",
      "label": "Bagground color",
      "default": "#01393d"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "heading_1",
      "label": "Hook overskrift"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Billede"
    },
    {
      "type": "richtext",
      "id": "text_1",
      "label": "Tekst"
    },


    {
      "type": "text",
      "id": "heading_2",
      "label": "Hook overskrift"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Billede"
    },
    {
      "type": "richtext",
      "id": "text_2",
      "label": "Tekst"
    },


    {
      "type": "text",
      "id": "heading_3",
      "label": "Hook overskrift"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Billede"
    },
    {
      "type": "richtext",
      "id": "text_3",
      "label": "Tekst"
    }
  ],
"presets": [
    {
      "name": "Hooks-Media",
      "category": "Collection"
    }
  ]
}
{% endschema %}